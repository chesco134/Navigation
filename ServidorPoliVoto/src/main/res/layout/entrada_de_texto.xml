<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/entrada_de_texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:layout_marginStart="12sp"
        android:layout_marginLeft="12sp"
        android:layout_marginEnd="12sp"
        android:layout_marginRight="12sp"
        android:textSize="20sp"
        android:background="@drawable/fondo_edit_text_no_opaque"/>
    <TextView
        android:id="@+id/piso_entrada_de_texto"
        android:layout_width="wrap_content"
        android:layout_height="1sp"
        android:layout_alignEnd="@+id/entrada_de_texto"
        android:layout_alignRight="@+id/entrada_de_texto"
        android:layout_alignStart="@+id/entrada_de_texto"
        android:layout_alignLeft="@+id/entrada_de_texto"
        android:layout_below="@+id/entrada_de_texto"
        android:layout_marginBottom="12sp"
        android:background="@color/colorPrimary"/>
</RelativeLayout>
