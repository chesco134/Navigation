<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/monitor_de_actividad_etiqueta_lista_usuarios"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="20sp"
        android:layout_marginStart="12sp"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:layout_marginEnd="12sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:text="@string/monitor_de_actividad_dispositivos_conectados"/>
    <ListView
        android:id="@+id/monitor_de_actividad_lista_usuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monitor_de_actividad_etiqueta_lista_usuarios"
        android:layout_marginBottom="20sp"/>

</RelativeLayout>