<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/ubicacion_contenedor_tipo_de_centro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ubicacion_texto_tipo_de_centro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/texto_configuracion_de_ubicacion"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/ubicacion_tipo_de_centro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ubicacion_texto_tipo_de_centro"
            android:layout_marginTop="6sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ubicacion_contenedor_lugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ubicacion_contenedor_tipo_de_centro"
        android:layout_marginTop="20sp"
        android:visibility="invisible">
        <TextView
            android:id="@+id/ubicacion_texto_nombre_lugar_votacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombre_lugar_votacion"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/ubicacion_nombre_lugar_votacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6sp"
            android:layout_below="@+id/ubicacion_texto_nombre_lugar_votacion"/>
    </RelativeLayout>
</RelativeLayout>
