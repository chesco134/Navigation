<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/polivoto_color</item>
        <item name="colorPrimaryDark">@color/polivoto_colorPrimaryDark</item>
        <item name="colorAccent">@color/polivoto_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyEditText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34sp</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:layout_marginLeft">12sp</item>
        <item name="android:layout_marginRight">12sp</item>
        <item name="android:paddingTop">4sp</item>
        <item name="android:paddingBottom">4sp</item>
        <item name="android:background">@drawable/fondo_edit_text_no_opaque</item>
    </style>
    <style name="MyTextView" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="MyButtonCustom" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36sp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">12sp</item>
        <item name="android:layout_marginRight">12sp</item>
        <item name="android:background">@drawable/my_custom_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
